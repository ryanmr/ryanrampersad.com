---
import BackgroundSpiral from "../experiment1/BackgroundSpiral.astro";
---

<div class="relative">
  <div
    id="work"
    class="relative z-20 flex min-h-screen w-full flex-col items-center justify-center"
  >
    <div class="w-full">
      <div
        class="relative isolate mb-12 flex min-h-[10rem] items-center justify-center"
      >
        <!-- <div
        class="absolute inset-0 -z-10 -skew-y-6 border-t border-b border-red-700"
      >
      </div> -->
        <h3 class="text-center text-3xl font-bold">Résumé and Work</h3>
      </div>

      <div class="container mx-auto flex justify-center gap-4">
        <a
          class="block rounded-sm border border-stone-700 bg-black bg-opacity-20 py-2 px-4 transition-all duration-500 hover:border-red-600"
          href="/resume">Résumé</a
        >
        <a
          class="block rounded-sm border border-stone-700 bg-black bg-opacity-20 py-2 px-4 transition-all duration-500 hover:border-red-600"
          href="/history">History</a
        >
      </div>
    </div>
  </div>
  <div class="absolute inset-0 z-10 mx-auto max-w-4xl blur-lg">
    <BackgroundSpiral />
  </div>
</div>
