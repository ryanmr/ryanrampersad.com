---
import Spiral from "../decorations/Spiral.astro";
---

<div id="work" class="grid min-h-screen grid-cols-1 items-center">
  <div
    class="relative z-20 col-start-1 row-start-1 flex w-full flex-col items-center justify-center"
  >
    <div class="w-full">
      <div
        class="relative isolate mb-12 flex min-h-[10rem] items-center justify-center"
      >
        <h3 class="text-center text-3xl font-bold">Résumé and Work</h3>
      </div>

      <div class="container mx-auto flex justify-center gap-4">
        <a
          class="block rounded-sm border border-stone-700 bg-black bg-opacity-40 py-2 px-4 transition-all duration-500 hover:border-red-600"
          href="/resume">Résumé</a
        >
        <a
          class="block rounded-sm border border-stone-700 bg-black bg-opacity-40 py-2 px-4 transition-all duration-500 hover:border-red-600"
          href="/history">History</a
        >
      </div>
    </div>
  </div>
  <div class="z-10 col-start-1 row-start-1 mx-auto w-full max-w-4xl blur-sm">
    <Spiral />
  </div>
</div>
